<% layout('layout/boilerplate') %>

<!-- Background styling -->
<style>
  body {
    background: linear-gradient(to right, #f0f4ff, #e8f0fc);
    background-attachment: fixed;
  }

  .home-section {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 20px;
    padding: 60px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
  }

  .home-section h1,
  .home-section h5 {
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  @media (max-width: 768px) {
    .home-section {
      padding: 30px 20px;
    }
  }
</style>

<div class="container py-5">
  <div class="row align-items-center g-5 home-section">
    <!-- LEFT: Description & Role Info -->
    <div class="col-lg-6">
      <h1 class="display-5 fw-bold text-primary mb-3">
        Welcome to the Visitor Pass Portal
      </h1>
      <p class="lead text-secondary mb-4">
        Manage secure and streamlined visitor entry with role-based dashboards
        for Visitors, Approvers, and Admins.
      </p>

      <div class="mb-4">
        <h5 class="text-dark fw-bold">Roles in the System</h5>
        <ul class="list-unstyled">
          <li>
            <i class="fas fa-user text-primary me-2"></i
            ><strong>Visitor:</strong> Submit visit requests & track status.
          </li>
          <li>
            <i class="fas fa-user-shield text-secondary me-2"></i
            ><strong>Approver:</strong> Approve or reject requests with remarks.
          </li>
          <li>
            <i class="fas fa-user-cog text-dark me-2"></i
            ><strong>Admin:</strong> View all activities across the portal.
          </li>
        </ul>
      </div>

      <a href="/admin/dashboard" class="btn btn-outline-dark btn-sm mt-3">
        <i class="fas fa-tools me-1"></i> Admin Panel
      </a>
    </div>

    <!-- RIGHT: Login/Register Options -->
    <div class="col-lg-6">
      <div class="card shadow-lg border-0 rounded-4 bg-white">
        <div class="card-body text-center p-5">
          <h3 class="mb-4 text-dark">
            <i class="fas fa-id-badge me-2"></i> Get Started
          </h3>
          <p class="text-muted">Choose your role and begin using the system.</p>
          <div class="d-grid gap-3 mt-4">
            <a href="/register" class="btn btn-dark btn-lg">
              <i class="fas fa-user-plus me-2"></i> Register
            </a>
            <a href="/login" class="btn btn-outline-secondary btn-lg">
              <i class="fas fa-sign-in-alt me-2"></i> Login
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
