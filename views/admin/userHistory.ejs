<% layout('layout/boilerplate') %>

<div class="container mt-5">
  <h3 class="text-dark text-center mb-4">
    <i class="fas fa-user-clock me-2"></i>Visitor Registrations by User: <%=
    user.username %>
  </h3>

  <% if (visitors.length === 0) { %>
  <div class="alert alert-info text-center">
    No visitor registrations found.
  </div>
  <% } else { %>
  <div class="table-responsive">
    <table class="table table-bordered align-middle table-hover">
      <thead class="table-dark text-center">
        <tr>
          <th>Visitor Name</th>
          <th>Mobile</th>
          <th>Dates</th>
          <th>Purpose</th>
          <th>Status</th>
          <th>Pass</th>
        </tr>
      </thead>
      <tbody>
        <% visitors.forEach(v => { %>
        <tr class="text-center">
          <td><%= v.name %></td>
          <td><%= v.mobile %></td>
          <td>
            <%= v.startDate.toDateString() %> â€“ <%= v.endDate.toDateString() %>
          </td>
          <td><%= v.purpose %></td>
          <td>
            <% if (v.status === 'approved') { %>
            <span class="badge bg-success">Approved</span>
            <% } else if (v.status === 'rejected') { %>
            <span class="badge bg-danger">Rejected</span>
            <% } else { %>
            <span class="badge bg-warning text-dark">Pending</span>
            <% } %>
          </td>
          <td>
            <% if (v.status === 'approved' && v.passPdf) { %>
            <a
              href="<%= v.passPdf %>"
              target="_blank"
              class="btn btn-sm btn-outline-primary"
            >
              <i class="fas fa-download me-1"></i> PDF
            </a>
            <% } else { %>
            <span class="text-muted"
              ><i class="fas fa-ban"></i> Not Available</span
            >
            <% } %>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <% } %>
</div>
