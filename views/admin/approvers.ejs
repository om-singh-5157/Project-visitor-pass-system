<% layout('layout/boilerplate') %>

<div class="container mt-5">
  <h3 class="text-primary text-center mb-4">
    <i class="fas fa-users-cog me-2"></i>All Registered Approvers
  </h3>

  <% if (approvers.length === 0) { %>
  <div class="alert alert-info text-center">
    <i class="fas fa-info-circle me-1"></i>No approvers found.
  </div>
  <% } else { %>
  <div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
      <thead class="table-dark text-center">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <!-- <th>Registered On</th> -->
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% approvers.forEach(a => { %>
        <tr class="text-center">
          <td><%= a.username %></td>
          <td><%= a.email %></td>
          <!-- <td><%= a.createdAt?.toDateString() || 'N/A' %></td> -->
          <td>
            <a
              href="/admin/approvers/<%= a._id %>"
              class="btn btn-sm btn-outline-primary"
            >
              <i class="fas fa-clock me-1"></i>View History
            </a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <% } %>
</div>
