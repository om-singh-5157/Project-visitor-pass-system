<% layout('layout/boilerplate') %>

<div class="container mt-5 mb-4">
  <h2 class="text-center mb-4 text-primary">
    <i class="fas fa-user-shield me-2"></i>Admin Control Panel
  </h2>

  <div class="row g-4 justify-content-center">
    <!-- Approvers Panel -->
    <div class="col-md-4">
      <div class="card h-100 shadow border-dark">
        <div class="card-body text-center">
          <i class="fas fa-users-cog fa-3x text-dark mb-3"></i>
          <h4 class="card-title">Approvers</h4>
          <p class="card-text">
            View all registered approvers and monitor their approvals and
            rejections.
          </p>
          <a href="/admin/approvers" class="btn btn-dark w-100">
            <i class="fas fa-eye me-1"></i> View Approvers
          </a>
        </div>
      </div>
    </div>

    <!-- Users Panel -->
    <div class="col-md-4">
      <div class="card h-100 shadow border-dark">
        <div class="card-body text-center">
          <i class="fas fa-users fa-3x text-dark mb-3"></i>
          <h4 class="card-title">Visitors</h4>
          <p class="card-text">
            Browse all users and their visitor pass requests and statuses.
          </p>
          <a href="/admin/users" class="btn btn-dark w-100">
            <i class="fas fa-eye me-1"></i> View Users
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
