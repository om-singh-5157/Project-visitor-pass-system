<% layout('layout/boilerplate') %>

<div class="container mt-5">
  <h2 class="text-center mb-4 text-primary">
    <i class="fas fa-user-circle me-2"></i>Welcome, <%= currUser.username %>
  </h2>

  <div class="row g-4 justify-content-center">
    <!-- New Visitor Registration -->
    <div class="col-md-5">
      <div class="card shadow rounded-4 h-100 text-center">
        <div class="card-body d-flex flex-column">
          <i class="fas fa-user-plus fa-2x text-dark mb-3"></i>
          <h4 class="mb-2">Submit a New Visitor Registration</h4>
          <p class="text-muted flex-grow-1">
            Register your next visitor in just a few steps.
          </p>
          <a href="/visitor/new" class="btn btn-dark w-100 mt-auto">
            <i class="fas fa-pencil-alt me-2"></i>New Registration
          </a>
        </div>
      </div>
    </div>

    <!-- View History -->
    <div class="col-md-5">
      <div class="card shadow rounded-4 h-100 text-center">
        <div class="card-body d-flex flex-column">
          <i class="fas fa-history fa-2x text-dark mb-3"></i>
          <h4 class="mb-2">Your Previous Submissions</h4>
          <p class="text-muted flex-grow-1">
            Track your submitted visitor passes and their status.
          </p>
          <a
            href="/visitor/<%= userId %>/history"
            class="btn btn-dark w-100 mt-auto"
          >
            <i class="fas fa-eye me-2"></i>View History
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
