<% layout("layout/boilerplate") %>

<div class="container text-center mt-5">
  <div class="display-1 fw-bold text-danger">
    <i class="fas fa-exclamation-triangle"></i> <%= err.status || 500 %>
  </div>

  <h2 class="text-dark mb-3">
    Oops! <%= err.message || "Something went wrong." %>
  </h2>

  <p class="text-muted mb-4">
    We're sorry, but the page you requested could not be found or something went
    wrong.
  </p>

  <a href="/" class="btn btn-dark px-4 py-2">
    <i class="fas fa-home me-2"></i>Back to Home
  </a>
</div>
